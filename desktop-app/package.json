{
  "name": "renovation-vision",
  "version": "1.0.0",
  "description": "AI-Powered Renovation Visualization",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac"
  },
  "build": {
    "appId": "com.renovationvision.app",
    "productName": "Renovation Vision",
    "files": [
      "main.js",
      "frontend/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    }
  },
  "dependencies": {
    "electron": "^28.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.0.0"
  }
}